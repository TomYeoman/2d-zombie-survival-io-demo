{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@io/common": ["../../common/*"],
			"*": ["node_modules/*", "src/@types/*"]
		}
	},
	"include": ["src/**/*", "../../common/**/*"]
}