{
  "name": "@io/server",
  "version": "0.1.0",
  "engines": {
    "node": "<=14.15.4"
  },
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microsoft/TypeScript-Node-Starter.git"
  },
  "author": "Bowden Kelly",
  "license": "MIT",
  "scripts": {
    "// ------ DEVELOPMENT ----- //": "",
    "set-env": "cross-env NODE_ENV=development",
    "debug": "yarn run set-env && nodemon src/server.ts",
    "convert": "yarn run set-env && ts-jest config:migrate ./jest.config.js",
    "watch-debug": "yarn run set-env && nodemon --inspect dist/server.js",
    "// ------ TESTING ----- //": "",
    "test": "jest --forceExit --coverage --v erbose",
    "watch-test": "yarn run test -- --watchAll",
    "coverage": "jest --collectCoverageFrom=src/**/*.ts --coverage",
    "stress-test": "yarn run set-env && nodemon ./src/bot/stresstest.ts",
    "// ------ BUILDING ----- //": "",
    "build": "tsc",
    "postbuild": "cp -r ./src/assets dist/server/src/assets",
    "build:watch": "tsc -w",
    "// ------ LINTING ----- //": "",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "// ------ DB-MIGRATIONS ----- //": "",
    "knex:migrate:make": "npx knex --knexfile src/db/knexfile.ts -x ts migrate:make",
    "knex:migrate:latest": "npx knex --knexfile src/db/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "npx knex --knexfile src/db/knexfile.ts migrate:rollback",
    "// ------ PRODUCTION ----- //": "",
    "start": "node dist/server/src/server.js",
    "start:debug": "yarn run build && node dist/server/src/server.js",
    "start:electron": "yarn-run-all --parallel electron:*",
    "electron:app": "electron app.js",
    "electron:webpack": "webpack --watch --config ./webpack.dev.js",
    "webpack": "webpack --config webpack.dev.js"
  },
  "dependencies": {
    "@geckos.io/phaser-on-nodejs": "^1.2.5",
    "@io/common": "workspace:*",
    "@types/uuid": "^8.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "easystarjs": "^0.4.4",
    "nengi": "1.20.0",
    "npm-run-all": "^4.1.5",
    "phaser": "3.22.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.28.2",
    "@types/node": "^12.7.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "copy-webpack-plugin": "^5.1.1",
    "electron": "v10.4.7",
    "eslint": "^7.1.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-node-externals": "^1.7.2"
  },
  "resolutions": {
    "react": "16.14.25"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter/issues"
  },
  "homepage": "https://github.com/Microsoft/TypeScript-Node-Starter#readme",
  "main": "jest.config.js",
  "directories": {
    "test": "test"
  }
}
